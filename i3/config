# Move worspace to other output

bindsym $mod+Control+Left move workspace to output left
bindsym $mod+Control+Right move workspace to output right
bindsym $mod+Control+Up move workspace to output up
bindsym $mod+Control+Down move workspace to output down

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# Mode to resize windows

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Mode to change Gaps

mode "gaps" {
        bindsym Up gaps inner all plus 5
        bindsym Down gaps inner all minus 5
        bindsym Left gaps outer all plus 5
        bindsym Right gaps outer all minus 5
        bindsym Escape mode "default"
}

bindsym $mod+g mode "gaps"

# Mode to control Music ( spotify )

mode "music" {

    bindsym $mod+Return       exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play ; notify-send PLAY "
    bindsym $mod+BackSpace    exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_pause ; notify-send PAUSE"
    bindsym $mod+Left         exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_previous ; notify-send PREVIOUS"
    bindsym $mod+Right        exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_next ; notify-send NEXT"
    bindsym $mod+Up           exec --no-startup-id "amixer set Master 10%+"
    bindsym $mod+Down         exec --no-startup-id "amixer set Master 10%-"
    bindsym $mod+twosuperior  exec --no-startup-id "urxvt -e /home/seb/.cargo/bin/spotifyd --no-daemon"  
    bindsym $mod+ampersand    exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_transfer_to_device Gremlins ; notify-send 'Listening on Gremlins'"
    bindsym $mod+eacute       exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_transfer_to_device Asimov ; notify-send 'Listening on Asimov'"
    bindsym $mod+F1           exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play_uri spotify:playlist:7vkO2z2Ym0ahAYboR7yxrb ; notify-send 'Playlist Seb'"
    bindsym $mod+F2           exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play_uri spotify:playlist:5SGVmqhNn36CoIrii9C64g ; notify-send 'Playlist Stef'"
    bindsym $mod+F3           exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play_uri spotify:playlist:05cy2G3X2K1eSx4WiBXKS4 ; notify-send 'Playlist Labo'"
    bindsym $mod+F4           exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play_uri spotify:playlist:37i9dQZF1DZ06evO3oiTv0 ; notify-send 'Playlist Leo'"
    bindsym $mod+F5           exec --no-startup-id "/home/seb/devel/spoticli.git/spoticli_play_uri spotify:album:0Hr889Bpf14zxKuaA64cnM ; notify-send 'Album Before The Storm'"

    bindsym Escape mode "default"
}

bindsym $mod+m mode "music"

# Start i3bar to display a workspace bar

bar {
        font pango:Monospace 8
        status_command i3blocks
        position top
        mode dock
        modifier None
}

bindsym $mod+x                  exec --no-startup-id pkill -RTMIN+5 i3blocks
bindsym $mod+w                  exec --no-startup-id "/home/seb/.env/i3/random_wallpaper /home/seb/.env/wallpapers"
bindsym $mod+Escape             exec --no-startup-id xtrlock
bindsym $mod+BackSpace          exec --no-startup-id firefox-bin

bindsym XF86MonBrightnessDown	exec --no-startup-id xbacklight -dec 15
bindsym XF86MonBrightnessUp     exec --no-startup-id xbacklight -inc 15
bindsym XF86AudioMicMute        exec --no-startup-id amixer set Capture toggle     
bindsym XF86AudioRaiseVolume    exec --no-startup-id amixer set Master 10%+
bindsym XF86AudioLowerVolume    exec --no-startup-id amixer set Master 10%-

